@inproceedings{Edrich.2021,
  author       = {Edrich, Ann-Kathrin and Yildiz, Anil and Roscher, Ribana and Kowalski, Julia},
  booktitle    = {{{AGU Fall Meeting}} 2021, online, 13–17 Dec 2021},
  title        = {Machine Learning Based Prediction of Shallow Landslides},
  year         = {2021},
  month        = dec,
  pages        = {NH34A-07},
  abstract     = {Landslides can occur as localized catastrophic deep-seated failures of large magnitude, or as widespread and more frequent shallow landslides. Due to extreme rainfall events, such as the catastrophic one in August 2005 or the most recent one in July 2021 in Central Europe, shallow landslides can occur in large numbers which often severely affect environment and economy while damaging infrastructure and dwellings. Landslide hazard maps allow a predictive assessment at various temporal and spatial scales based on information of past events and additional geo-factors. Utilizing machine learning techniques for this purpose has gained more importance in recent years due to the increased availability of high-resolution and open-source geospatial data as well as open access software frameworks. In this presentation, we will describe our novel approach to machine-learning based prediction of shallow landslides in Alpine regions. More specifically, we propose a decision tree-based machine learning model to investigate mountain slopes for their likelihood of the occurrence of shallow landslide-type slope failures. We demonstrate the feasibility of our framework while applying it to Alpine and subalpine areas in Switzerland that are prone to rainfall-induced shallow landslides. A reference training dataset was compiled containing environmental features at sites where landslide events were recorded in the WSL landslide database and at locations where no landslides occurred. The prevailing features at all these locations were extracted solely from openly available geodata either at national or European scale, which can be grouped into topographic, soil, hydrological and land cover features. The deliberate redundancy of the datasets allows us to analyze the relevance and importance of individual input features for the landslide prediction. We pay particular attention to transparency, explainability and reproducibility of our machine learning model by following the paradigms of explainable machine learning such as a comprehensive analysis of the importance of features in the light of the specific application incorporating expert knowledge. Finally, the predictive quality of the machine learning model developed in this study is compared with the prediction based on a physics-based slope stability analysis.},
  creationdate = {2022-09-22T12:47:13},
  department   = {080003, 422410},
  language     = {Englisch (eng)},
  owner        = {edrich},
  publishedas  = {online},
