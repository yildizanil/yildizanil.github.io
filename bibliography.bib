@inproceedings{Edrich.2023b,
  author       = {Edrich, Ann-Kathrin and Yildiz, Anil and Roscher, Ribana and Kowalski, Julia},
  booktitle    = {XVIII General Assembly of the International Union of Geodesy and Geophysics (IUGG) (Berlin 2023)},
  title        = {FAIR shallow landslide hazard mapping},
  year         = {2023},
  month        = {Jul},
